.d-flex.flex-column.gap-3.pt-5.ps-4.pe-5.hide-scrollbar.h-100
  each message in messages
    -
      const bg = message.user ? "gray" : "bg-primary"
      const color = message.user ? "text-secondary" : "text-light"
      const position = message.user ? "align-self-start" : "align-self-end"
    .d-flex.w-md-75(class=position)
      img.d-none.d-md-block.rounded-circle.align-self-end.me-3.ms-2(src=message.avatar alt="avatar" width="50" height="50")
      div.p-4.rounded-4.shadow-sm(class=bg)
        p.fw-bold.mb-1 #{message.user}
        p.mb-2(class=color) #{message.text}
        p.border-top.small.mb-0(class=color) #{message.time}

